{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "HTMV",
  "scopeName": "text.html.htmv",
  "patterns": [
		{
			"match": "{[a-zA-Z_][a-zA-Z0-9_.]+}",
			"name": "string"
		},
		{
			"match": "<(For|Isset) (.+?(?=>))",
			"captures": {
				"1": {
					"name": "keyword"
				},
				"2": {
					"name": "variable.other.htmv"
				}
			}
		},
		{
			"match": "</?(For|Isset)(?=\\b)",
			"captures": {
				"1": {
					"name": "keyword"
				}
			}
		},
    {
      "include": "text.html.basic"
    }
  ]
}
