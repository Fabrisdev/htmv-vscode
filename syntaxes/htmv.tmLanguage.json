{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "HTMV",
  "scopeName": "text.html.htmv",
  "patterns": [
		{
			"match": "<For (.+?(?=>))",
			"captures": {
				"1": {
					"name": "variable.other.htmv"
				}
			}
		},
		{
			"match": "</?(For|Isset)(?=\\b)",
			"captures": {
				"1": {
					"name": "keyword.control.htmv"
				}
			}
		},
    {
      "include": "text.html.basic"
    }
  ]
}
